class factorielle{
    int x=7;

    int fact(int x){
        int retour;
        if (x==0) {
            retour=1;
        }else{
            retour=x*fact(x-1);
        };
        return retour;
    };

    main {
        int res=fact(x);
        write("fact =");
        writeln(res);
    }
}